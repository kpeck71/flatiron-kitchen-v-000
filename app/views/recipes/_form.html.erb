<%= form_for recipe do |f|%>
<p>
  <%= f.label :name %>
  <%= f.text_field :name %>
</p>
  <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %><br></br>
  Or create new ingredient:
  <%= f.fields_for :ingredients, recipe.ingredients.build do |ingredient_fields| %>
    <%= ingredient_fields.text_field :name %><br></br>
  <% end %>
  <%= f.submit %>
<% end %>
